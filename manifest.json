{
  "manifest_version": 3,
  "name": "B站字幕下载助手",
  "version": "1.0.0",
  "description": "一键下载B站视频字幕的Chrome插件",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://api.bilibili.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "B站字幕下载助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["bilibili-subtitle-helper.js", "test-helper.js", "blank-page.html", "blank-page.js"],
      "matches": ["*://*.bilibili.com/*", "<all_urls>"]
    }
  ]
} 